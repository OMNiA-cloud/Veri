from time import time
start_time=time()

def cizgi_ciz(toplam_uzunluk , cizgi_uzunluk = '' ):

    Cizgi_Sayisi = '-' * toplam_uzunluk

    if( cizgi_uzunluk ):

        Cizgi_Sayisi += ' ' + cizgi_uzunluk

    print(Cizgi_Sayisi)

def orta(orta_uzunluk):

    if(orta_uzunluk) > 0:
        orta(orta_uzunluk-1)
        cizgi_ciz(orta_uzunluk)
        orta(orta_uzunluk-1)

def draw_ruler( toplam_uzunluk , cizgi_uzunluk ):

    cizgi_ciz ( cizgi_uzunluk , '0' )

    for j in range ( 1 , 1 + toplam_uzunluk):
        orta ( cizgi_uzunluk - 1 )
        cizgi_ciz ( cizgi_uzunluk , str (j) )

draw_ruler (5,5)

end_time = time()
elapsed = end_time-start_time
print(elapsed)
